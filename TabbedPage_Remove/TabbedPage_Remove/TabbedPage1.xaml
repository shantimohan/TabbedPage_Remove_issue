<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabbedPage_Remove.TabbedPage1">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Tab 1"
                 BackgroundColor="LightBlue">
        <StackLayout>
            <Label Text="An Issue from Xamarin.Forms Forums: Tabs navigation fault after removing a tab"
                   Margin="0,20,0,0"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="Medium" />

            <Button x:Name="Button1"
                    Clicked="Button1_Clicked"
                    Text="Click Me for a New Tab"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="20" />
        </StackLayout>
        
    </ContentPage>
  <ContentPage Title="Tab 2" BackgroundColor="LightCoral" />
  <ContentPage Title="Tab 3" BackgroundColor="LightGreen" />
</TabbedPage>